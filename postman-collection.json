{
    "info": {
        "name": "ToDo App API",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "variable": [
        {
            "key": "apiBaseUrl",
            "value": "http://localhost:8080"
        }
    ],
    "item": [
        {
            "name": "ToDo items",
            "item": [
                {
                    "name": "Get all ToDo items for the current user",
                    "request": {
                        "method": "GET",
                        "url": "{{apiBaseUrl}}/todos"
                    }
                }
            ]
        }
    ]
}
